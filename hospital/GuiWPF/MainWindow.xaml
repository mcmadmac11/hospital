<Window x:Class="GuiWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuiWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="patientName" HorizontalAlignment="Left" Height="23" Margin="150,47,0,0" TextWrapping="Wrap" Text="Patient Name" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="doctorName" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Doctor Name" VerticalAlignment="Top" Width="120" Margin="150,105,0,0"/>
        <TextBox x:Name="timeOfDay" HorizontalAlignment="Left" Height="23" Margin="150,165,0,0" TextWrapping="Wrap" Text="Appointment Time" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="date" HorizontalAlignment="Left" Height="23" Margin="150,227,0,0" TextWrapping="Wrap" Text="Date" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="save" Content="Save" HorizontalAlignment="Left" Margin="340,150,0,0" VerticalAlignment="Top" Width="75" Click="save_Click"/>

    </Grid>
</Window>
